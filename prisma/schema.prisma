generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  imageUrl    String   @db.Text
  ingredients String   @db.Text
  instructions String  @db.Text
  rating      Float
  isFavorite  Boolean
  origin      String
  servings    Int
}